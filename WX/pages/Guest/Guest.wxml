<!--pages/Guest/Guest.wxml-->

<view class="body">
  <view class="head">
    <!-- <image src='../h2.jpg'></image>-->
    <view class='title'>谷香谷色农家</view>
    <view class='address'>
      <image src="../dizhiico.png" style="width:16px;height:16px;"></image>
      <text style="font-size:12px;"> 地址：神农谷游客服务中心大门停车场旁</text>
    </view>
    <view class="desc"></view>
  </view>

  <view class="list">
    <view wx:for="{{list}}">
      <view class='item' wx:if="{{item.num>0}}">
        <text class='name'>{{item.FoodName}}</text>
        <text class='count'>x {{item.num}}</text>
        <text class='money'><text class="moneyico">￥</text>{{item.num * item.FoodPrice}}</text>
      </view>
    </view>
    <view class='item'>
      <text style="float:right;width:30%;"><text style="font-size:12px;">小计：</text>
      <text style="color:#FEBD3B"><text class="moneyico">￥</text>{{totalMoney}}</text>
      </text>
    </view>
  </view>


  <view class="info">
    <view class='infoitem'>
      <text>用餐时间：</text>
      <view class='infoitem_right'>
        <picker mode="time" start="00:00" start="23:59" bindchange="bindchange">{{time}}</picker>
      </view>
    </view>
    <view class='infoitem'>
      <text>用餐人数：</text>
      <view class='infoitem_right'>
        <input style="text-align:right;border-bottom:1px solid #ccc;width:20%;float:right;" type="text" maxlength="2" value="{{ordernum}}" bindinput="ordernumInput"></input>
      </view>
    </view>
    <view class='infoitem'>
      <text>联系人：</text>
      <view class='infoitem_right'>
        <input style="text-align:right;border-bottom:1px solid #ccc;width:40%;float:right;" type="text" maxlength="6" value="{{name}}" bindinput='nameInput'></input>
      </view>
    </view>
    <view class='infoitem'>
      <text>手机号：</text>
      <view class='infoitem_right'>
        <input style="text-align:right;border-bottom:1px solid #ccc;width:60%;float:right;" type="text" maxlength="11" value="{{phone}}" bindinput='phoneInput'></input>
      </view>
    </view>
  </view>
  <view class="remark">
    <text style="float:left;">备注：</text>
    <textarea style="float:left;font-size:16px;color:#808080;" value="{{remark}}" bindinput='remarkInput'></textarea>
  </view>

  <view class="footer">
    <view class="money1">合计：
      <text class='moneyico'>￥</text>
      <text style="font-size:18px;color:#FEBD3B">{{totalMoney}}</text>
    </view>
    <button open-type="getUserInfo" bindgetuserinfo="gotopay" class="subbtn">
      支付￥{{totalMoney}}
    </button>

  </view>
</view>